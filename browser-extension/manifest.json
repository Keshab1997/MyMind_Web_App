{
  "manifest_version": 3,
  "name": "My Mind Saver",
  "version": "1.4",
  "description": "Save links directly to your My Mind feed with Auth.",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus", "notifications", "<all_urls>"],
  "host_permissions": [
    "https://cmrgloxlyovihqhdxdls.supabase.co/*",
    "https://api.microlink.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open My Mind Saver"
    }
  }
}
